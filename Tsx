"use client";

import { useState } from "react";
import { FluidDynamics } from "@/components/ui/fluid-dynamics";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { 
  Select, 
  SelectContent, 
  SelectItem, 
  SelectTrigger, 
  SelectValue 
} from "@/components/ui/select";

export default function ZahoorAutoSpaPage() {
  const whatsappNumber = "919797472650"; // Your WhatsApp number

  const [service, setService] = useState("");
  const [date, setDate] = useState("");
  const [time, setTime] = useState("");

  const handleBooking = () => {
    if (!service || !date || !time) {
      alert("Please select service, date, and time.");
      return;
    }
    const message = `Hi, I would like to book a ${service} service at Zahoor Auto Spa on ${date} at ${time}.`;
    window.open(
      `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`, 
      "_blank"
    );
  };

  return (
    <main className="relative flex min-h-screen w-full flex-col items-center justify-center overflow-hidden bg-black p-6">
      {/* Fluid background */}
      <FluidDynamics 
        strength={100}
        radius={1}
        iterations={3}
        viscosity={0.0}
        diffusion={0.0}
        showDensity={true}
        showVelocity={false}
        addDensity={true}
        addVelocity={true}
        animate={true}
        circle={true} 
      />

      {/* Page content */}
      <div className="absolute inset-0 flex flex-col items-center justify-center z-10 space-y-8">
        {/* Title */}
        <h1 className="text-center text-5xl md:text-6xl font-bold tracking-tight text-white drop-shadow-lg">
          Zahoor Auto Spa
        </h1>

        {/* Subtitle */}
        <p className="text-white/80 text-lg md:text-xl text-center max-w-2xl">
          Premium Car Wash & Detailing Services
        </p>

        {/* Booking Form */}
        <div className="bg-white/10 backdrop-blur-md rounded-2xl p-6 w-[90%] max-w-lg shadow-xl space-y-4">
          {/* Service Dropdown */}
          <Select onValueChange={(value) => setService(value)}>
            <SelectTrigger className="w-full bg-white/80 text-black">
              <SelectValue placeholder="Select a Service" />
            </SelectTrigger>
            <SelectContent>
              <SelectItem value="Exterior Wash">Exterior Wash</SelectItem>
              <SelectItem value="Interior Cleaning">Interior Cleaning</SelectItem>
              <SelectItem value="Full Detailing">Full Detailing</SelectItem>
              <SelectItem value="Polishing">Polishing</SelectItem>
            </SelectContent>
          </Select>

          {/* Date Input */}
          <Input 
            type="date" 
            className="bg-white/80 text-black w-full" 
            value={date}
            onChange={(e) => setDate(e.target.value)}
          />

          {/* Time Input */}
          <Input 
            type="time" 
            className="bg-white/80 text-black w-full" 
            value={time}
            onChange={(e) => setTime(e.target.value)}
          />

          {/* WhatsApp Booking Button */}
          <Button 
            size="lg" 
            className="w-full bg-green-500 hover:bg-green-600 text-white px-6 py-4 text-lg rounded-xl shadow-lg"
            onClick={handleBooking}
          >
            Book on WhatsApp
          </Button>
        </div>
      </div>
    </main>
  );
}